FROM python:3.12

WORKDIR /app

RUN apt-get update && \
    apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY . ./validation_service/

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "validation_service.main:app", "--host", "0.0.0.0", "--port", "8000"]
